<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White"
        tools:context=".ui.activities.SignUpActivity">

        <include
            android:id="@+id/mToolbar"
            layout="@layout/layout_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            style="@style/H328Pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_19sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:text="@string/signupa"
            android:fontFamily="@font/segoe"
            android:textColor="@color/Tuna"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mToolbar" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emaillay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_19sdp"
            android:layout_marginTop="@dimen/_48sdp"
            android:layout_marginEnd="@dimen/_19sdp"
            android:hint="@string/email"
            app:boxStrokeColor="@color/SilverChallice"
            app:hintTextColor="@color/SilverChallice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                style="@style/Body214Pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe"
                android:inputType="textEmailAddress"
                android:textColor="@color/Tundora"
                android:textColorHint="@color/SilverChallice"
                android:typeface="normal" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passlay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_19sdp"
            android:layout_marginTop="@dimen/_19sdp"
            android:layout_marginEnd="@dimen/_19sdp"
            android:hint="@string/password"
            app:boxStrokeColor="@color/SilverChallice"
            app:hintTextColor="@color/SilverChallice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emaillay"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/ic_eye">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                style="@style/Body214Pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe"
                android:inputType="textWebPassword"
                android:textColor="@color/Tundora"
                android:textColorHint="@color/SilverChallice"
                android:typeface="normal" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/login"
            style="@style/Body116Pt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_19sdp"
            android:layout_marginEnd="@dimen/_19sdp"
            android:layout_marginTop="@dimen/_37sdp"
            android:background="@drawable/primarybutton"
            android:fontFamily="@font/segoe"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="@color/White"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passlay" />

        <TextView
            android:id="@+id/signup"
            style="@style/Body116Pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_27sdp"
            android:fontFamily="@font/segoe"
            android:text="@string/already_have_an_account_sign_in"
            android:textColor="@color/DoveGrey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColorLink="@color/Minesaft"
            app:layout_constraintTop_toBottomOf="@id/login" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>